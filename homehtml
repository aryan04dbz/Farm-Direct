                <script>
                    document.getElementById("ai-prediction-form-farmer").addEventListener("submit", function (e) {
                        e.preventDefault();
                    
                        // Collect all form data
                        const location = document.getElementById("location-f").value;
                        const crop = document.getElementById("crop-f").value;
                        const pesticide = parseFloat(document.getElementById("pesticide-amount").value);
                        const fertilizer = parseFloat(document.getElementById("fertilizer-amount").value);
                        const area = parseFloat(document.getElementById("area-f").value);
                    
                        // Simple prediction formula (this would be replaced with actual model in production)
                        const predictedYield = (fertilizer + pesticide) * 0.3 * area; 
                    
                        // Display the result
                        const outputDiv = document.getElementById("prediction-output-farmer");
                        outputDiv.textContent = Predicted Yield: ${predictedYield.toFixed(2)} tons;
                    });
                </script>
